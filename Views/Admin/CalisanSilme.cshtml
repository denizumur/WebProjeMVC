@using berber.Models;
@model List<Calisan>

@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["BasariMesaji"] != null)
{
    <div class="alert alert-danger">@TempData["BasariMesaji"]</div>
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="table-container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Çalışan</th>
                <th>Uygunluk Saatleri</th>
                <th>Uzmanlık Alanları</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.AdSoyad</td>
                    <td>@x.UygunlukSaatleri</td>
                    <td>@x.UzmanlikAlanlari</td>

                    <td>
                        <a href="/Admin/CalisanSil/@x.CalisanID" class="btn-custom" style="background-color:red">SİL</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
