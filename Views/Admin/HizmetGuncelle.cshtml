@model berber.Models.Islem
@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<form asp-action="HizmetGuncelle" method="post">
    
    <input type="hidden" name="IslemID" value="@Model.IslemID" />

    <div class="form-group">
        <label for="IslemAdi">Hizmet Adı</label>
        <input type="text" class="form-control" id="IslemAdi" name="IslemAdi" value="@Model.IslemAdi" required />
    </div>
    <div class="form-group">
        <label for="Sure">Süre (dk)</label>
        <input type="number" class="form-control" id="Sure" name="Sure" value="@Model.Sure" required />
    </div>
    <div class="form-group">
        <label for="Ucret">Ücret (₺)</label>
        <input type="number" class="form-control" id="Ucret" name="Ucret" value="@Model.Ucret" required />
    </div>

    <!-- Çalışanları checkbox ile listele -->
    <div class="form-group">
        <label>Çalışan Seçiniz</label><br />

        @foreach (var calisan in ViewBag.Calisanlar as List<Calisan>)
        {
            <div>
                <input type="checkbox" name="secilenCalisanlar" value="@calisan.CalisanID" />
                @calisan.AdSoyad
            </div>
        }

        <span asp-validation-for="IslemID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>



<!-- Bootstrap 5 CDN bağlantıları -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

