@model berber.Models.Islem
@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<form asp-action="HizmetGuncelle">
    <input type="hidden" asp-for="IslemID" />
    <div>
        <label asp-for="IslemAdi" class="control-label">İşlem Adı</label>
        <input asp-for="IslemAdi" class="form-control" />
        <span asp-validation-for="IslemAdi" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Sure" class="control-label">Süre</label>
        <input asp-for="Sure" class="form-control" />
        <span asp-validation-for="Sure" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Ucret" class="control-label">Ücret</label>
        <input asp-for="Ucret" class="form-control" />
        <span asp-validation-for="Ucret" class="text-danger"></span>
    </div>
    
    <button type="submit">Güncelle</button>
</form>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

