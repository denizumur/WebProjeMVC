@using berber.Models;
@model List<Randevu>

@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["BasariMesaji"] != null)
{
    <div class="alert alert-danger">@TempData["BasariMesaji"]</div>
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="table-container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Randevu </th>
                <th>Müşteri Adı</th>
                <th>Çalışan</th>
                <th>İşlem</th>
                <th>Durum</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Tarih</td>
                    <td>@x.MusteriAdi</td>
                    <td>@x.Calisan.AdSoyad</td>
                    <td>@x.Islem.IslemAdi</td>
                    <td>@x.Durum</td>
                    <td>
                        <a href="/Admin/RandevuSil/@x.RandevuID" class="btn-custom" style="background-color:red">SİL</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
