


@using berber.Models;
@model List<Randevu>

@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Randevu Listesi</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Randevu Tarihi</th>
            <th>Çalışan</th>
            <th>Kullanıcı</th>
            <th>Hizmetler</th>
            <th>Durum</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.RandevuID</td>
                <td>@randevu.Tarih</td>
                <td>@randevu.Calisan.AdSoyad</td>
                <td>@randevu.Kullanici.AdSoyad</td>
                <td>
                    @foreach (var randevuIslem in randevu.RandevuIslemler)
                    {
                        <span>@randevuIslem.Islem.IslemAdi</span>

                        <br />
                    }
                </td>
                <td>@(randevu.Durum.HasValue && randevu.Durum.Value ? "Onaylı" : "Beklemede")</td>
                <td>
                    <a href="/Admin/RandevuSil/@randevu.RandevuID" class="btn-custom-success" style="background-color:red">Sil</a>
                </td>

            </tr>
        }
    </tbody>
</table>




<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />


