@model berber.Models.Islem
@{
    ViewData["Title"] = "Yeni Hizmet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["HataMesaji"] != null)
{
    <div class="alert alert-danger">@TempData["HataMesaji"]</div>
}

<form asp-controller="Admin" asp-action="HizmetEkle" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="input_box">
        <label asp-for="IslemAdi" class="control-label"></label>
        <input asp-for="IslemAdi" class="form-control" autocomplete="off" />
        <span asp-validation-for="IslemAdi" class="text-danger"></span>
    </div>

    <div class="input_box">
        <label asp-for="Ucret" class="control-label"></label>
        <input asp-for="Ucret" class="form-control" autocomplete="off" />
        <span asp-validation-for="Ucret" class="text-danger"></span>
    </div>

    <div class="input_box">
        <label asp-for="Sure" class="control-label"></label>
        <input asp-for="Sure" class="form-control" />
        <span asp-validation-for="Sure" class="text-danger"></span>
    </div>

    <!-- Çalışanları checkbox ile listele -->
    <div class="input_box">
        <label>Çalışan Seçiniz</label><br />

        @foreach (var calisan in ViewBag.Calisanlar as List<Calisan>)
        {
            <div>
                <input type="checkbox" name="secilenCalisanlar" value="@calisan.CalisanID" />
                @calisan.AdSoyad
            </div>
        }

        <span asp-validation-for="IslemID" class="text-danger"></span>
    </div>


    <div class="input_box">
        <input type="submit" value="Hizmet Ekle" class="input-submit" />
    </div>

</form>



<!-- Bootstrap 5 CDN bağlantıları -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}