@model berber.Models.Calisan
@{
    ViewData["Title"] = "Yeni Çalışan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["HataMesaji"] != null)
{
    <div class="alert alert-danger">@TempData["HataMesaji"]</div>
}


<form asp-controller="Admin" asp-action="CalisanEkle">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="input_box">
        <label asp-for="AdSoyad" class="control-label"></label>
        <input asp-for="AdSoyad" class="form-control" autocomplete="off" />
        <span asp-validation-for="AdSoyad" class="text-danger"></span>
    </div>

    <div class="input_box">
        <label asp-for="UzmanlikAlanlari" class="control-label"></label>
        <input asp-for="UzmanlikAlanlari" class="form-control" autocomplete="off" />
        <span asp-validation-for="UzmanlikAlanlari" class="text-danger"></span>
    </div>

    <div class="input_box">
        <label asp-for="UygunlukSaatleri" class="control-label"></label>
        <input asp-for="UygunlukSaatleri" class="form-control" />
        <span asp-validation-for="UygunlukSaatleri" class="text-danger"></span>
    </div>

    <div class="input_box">
        <input type="submit" value="Çalışan Ekle" class="input-submit" />
    </div>

</form>


<!-- Bootstrap 5 CDN bağlantıları -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}