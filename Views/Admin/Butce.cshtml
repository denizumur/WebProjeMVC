@{
    ViewData["Title"] = "Günlük Bütçe";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Günlük Bütçe</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Toplam Ücret (₺)</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.GunlukButce != null)
        {
            foreach (var item in ViewBag.GunlukButce)
            {
                <tr>
                    <td>@item.Tarih.ToString("yyyy-MM-dd")</td>
                    <td>@item.ToplamUcret.ToString("C")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">Bütçe verisi bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>





