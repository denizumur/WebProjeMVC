@model List<berber.Models.Calisan>


@{
    ViewData["Title"] = "Yeni Hizmet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Çalışanlar ve Hizmetleri</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık Alanları</th>
            <th>Uygunluk Saatleri</th>
            <th>Hizmetler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var calisan in Model)
        {
            <tr>
                <td>@calisan.AdSoyad</td>
                <td>@calisan.UzmanlikAlanlari</td>
                <td>@calisan.UygunlukSaatleri</td>
                <td>
                    @if (calisan.CalisanIslemler != null && calisan.CalisanIslemler.Count > 0)
                    {
                        <ul>
                            @foreach (var calisanIslem in calisan.CalisanIslemler)
                            {
                                <li>@calisanIslem.Islem.IslemAdi</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Bu çalışanın hizmeti yok.</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>




