@using berber.Models;
@model List<Randevu>

@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="table-container">
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Randevu Tarihi</th>
                <th>Müşteri Adı</th>
                <th>Çalışan</th>
                <th>İşlem</th>
                <th>Durum</th>
                <th>Detaylar</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.Tarih.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@randevu.MusteriAdi</td>
                    <td>@randevu.Calisan.AdSoyad</td>
                    <td>@randevu.Islem.IslemAdi</td>
                    <td>@randevu.Durum</td>
                    <td>
                        <a href="#" class="btn-custom">Detaylar</a>
                    </td>
                    <td>
                        <a href="/Randevu/RandevuGetir/@randevu.RandevuID" class="btn-custom-success" style="background-color:lawngreen">Güncelle</a>
                    </td>
                    <td>
                        <a href="/Randevu/RandevuSil/@randevu.RandevuID" class="btn-custom" style="background-color:red">SİL</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>