
@model List<berber.Models.Islem>

@{
    ViewData["Title"] = "Yeni Hizmet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Hizmetler ve Çalışanlar</h2>

<table class="table">
    <thead>
        <tr>
            <th>Hizmet Adı</th>
            <th>Süre</th>
            <th>Ücret</th>
            <th>Çalışanlar</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var islem in Model)
        {
            <tr>
                <td>@islem.IslemAdi</td>
                <td>@islem.Sure</td>
                <td>@islem.Ucret</td>
                <td>
                    @if (islem.CalisanIslemler != null && islem.CalisanIslemler.Count > 0)
                    {
                        <ul>
                            @foreach (var calisanIslem in islem.CalisanIslemler)
                            {
                                <li>@calisanIslem.Calisan.AdSoyad</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Bu hizmeti sunan çalışan yok.</span>
                    }
                </td>

                <td>
                        <a href="/Admin/HizmetSil/@islem.IslemID" class="btn-custom-success" style="background-color:red">Sil</a>
                </td>

            </tr>
        }
    </tbody>
</table>

<!-- Bootstrap 5 CDN bağlantıları -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
