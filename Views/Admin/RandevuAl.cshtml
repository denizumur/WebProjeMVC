@{
    // ViewBag üzerinden uygun saatleri alıyoruz
    var uygunSaatler = ViewBag.UygunSaatler as List<TimeSpan>;
}

<div>
    <h2>Randevu Al</h2>

    <form asp-action="RandevuAl" method="post">
        <label for="calisanId">Çalışan ID:</label>
        <input type="number" id="calisanId" name="calisanId" required />

        <label for="selectedDate">Tarih Seç:</label>
        <input type="date" id="selectedDate" name="selectedDate" required />

        <label for="uygunSaatler">Uygun Saatler:</label>
        <select id="uygunSaatler" name="selectedHour" required>
            @if (uygunSaatler != null && uygunSaatler.Any())
            {
                foreach (var saat in uygunSaatler)
                {
                    <option value="@saat">@saat</option>
                }
            }
            else
            {
                <option value="">Uygun saat yok</option>
            }
        </select>

        <button type="submit">Randevu Al</button>
    </form>
</div>

