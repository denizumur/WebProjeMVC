@model berber.Models.Islem
@{
    ViewData["Title"] = "YeniIslem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Form Başlangıcı -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Yeni İşlem Ekle</h2>
    <form class="form-group" method="post">

        <!-- İşlem Adı -->
        <div class="mb-3">
            @Html.LabelFor(x => x.IslemAdi, new { @class = "form-label" })
            @Html.TextBoxFor(x => x.IslemAdi, new { @class = "form-control", placeholder = "İşlem adı girin" })
        </div>

        <!-- Ücret -->
        <div class="mb-3">
            @Html.LabelFor(x => x.Ucret, new { @class = "form-label" })
            @Html.TextBoxFor(x => x.Ucret, new { @class = "form-control", placeholder = "Ücret girin(TL)" })
        </div>

        <!-- Süre -->
        <div class="mb-3">
            @Html.LabelFor(x => x.Sure, new { @class = "form-label" })
            @Html.TextBoxFor(x => x.Sure, new { @class = "form-control", placeholder = "Süre girin (dk)" })
        </div>

        <!-- Submit Butonu -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>

<!-- Bootstrap 5 CDN bağlantıları -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
