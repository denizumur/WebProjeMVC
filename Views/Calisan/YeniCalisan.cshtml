@model berber.Models.Calisan
@{
    ViewData["Title"] = "Yeni Çalışan Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Form Başlangıcı -->
<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Yeni Çalışan Ekle</h2>
    <form class="form-group" method="post">

        <div class="row">
            <!-- Adı Soyadı -->
            <div class="col-md-6 mb-3">
                @Html.LabelFor(x => x.AdSoyad, new { @class = "form-label" })
                @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control", placeholder = "Çalışanın adı soyadını girin" })
            </div>

            <!-- Uzmanlık Alanları -->
            <div class="col-md-6 mb-3">
                @Html.LabelFor(x => x.UzmanlikAlanlari, new { @class = "form-label" })
                @Html.TextBoxFor(x => x.UzmanlikAlanlari, new { @class = "form-control", placeholder = "Uzmanlık alanlarını girin" })
            </div>
        </div>

        <!-- Uygunluk Saatleri -->
        <div class="mb-3">
            @Html.LabelFor(x => x.UygunlukSaatleri, new { @class = "form-label" })
            @Html.TextBoxFor(x => x.UygunlukSaatleri, new { @class = "form-control", placeholder = "Çalışanın uygunluk saatlerini girin" })
        </div>

        <!-- Submit Butonu -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg px-5 py-3 rounded-pill shadow-sm">Kaydet</button>
        </div>
    </form>
</div>

<!-- Bootstrap 5 CDN bağlantıları -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
