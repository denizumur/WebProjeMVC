@using berber.Models;
@model List<Calisan>

@{
    ViewData["Title"] = "Calisanlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Çalışanlar Tablosu</title>

    <!-- Bootstrap 5 CDN bağlantısı -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        th, td {
            padding: 12px;
            text-align: center;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        /* Modern Buton Tasarımı */
        .btn-custom {
            background: linear-gradient(145deg, #ff9f00, #ff5e00);
            color: white;
            font-weight: bold;
            padding: 12px 25px;
            border: none;
            border-radius: 25px;
            box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1), -4px -4px 10px rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background: linear-gradient(145deg, #ff5e00, #ff9f00);
                box-shadow: 8px 8px 20px rgba(0, 0, 0, 0.2), -8px -8px 20px rgba(255, 255, 255, 0.2);
                transform: translateY(-5px);
            }

        .btn-primary-custom {
            background: linear-gradient(145deg, #007bff, #0056b3);
            color: white;
            font-weight: bold;
            padding: 12px 25px;
            border: none;
            border-radius: 25px;
            box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1), -4px -4px 10px rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

            .btn-primary-custom:hover {
                background: linear-gradient(145deg, #0056b3, #007bff);
                box-shadow: 8px 8px 20px rgba(0, 0, 0, 0.2), -8px -8px 20px rgba(255, 255, 255, 0.2);
                transform: translateY(-5px);
            }

        /* Başlık stili */
        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

        .table-container {
            margin-top: 20px;
        }

        .text-center {
            margin-top: 20px;
        }

    </style>
</head>
<body>

    <h2>Çalışanlar Tablosu</h2>

    <div class="table-container">
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Adı Soyadı</th>
                    <th>Uzmanlık Alanları</th>
                    <th>Uygunluk Saatleri</th>
                    <th>Detaylar</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.AdSoyad</td>
                        <td>@x.UzmanlikAlanlari</td>
                        <td>@x.UygunlukSaatleri</td>

                        <td>
                            <a href="#" class="btn-custom">Detaylar</a>
                        </td>
                        <td>
                            <a href="/Calisan/CalisanGetir/@x.CalisanID" class="btn-custom-success" style="background-color:lawngreen">Güncelle</a>
                        </td>
                        <td>
                            <a href="/Calisan/CalisanSil/@x.CalisanID" class="btn-custom" style="background-color:red">SİL</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Çalışan Ekle Butonu -->
    <div class="text-center">
        <a href="/Calisan/YeniCalisan" class="btn-primary-custom">Çalışan Ekle</a>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
