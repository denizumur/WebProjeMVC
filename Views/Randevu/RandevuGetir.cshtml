@model berber.Models.Randevu

@{
    ViewData["Title"] = "Randevu Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Sayfa Başlığı -->
<h2 class="text-center mb-4" style="color: #333;">Randevu Güncelle</h2>

<!-- Form Başlangıcı -->
@using (Html.BeginForm("RandevuGuncelle", "Randevu", FormMethod.Post))
{
    <div class="container">
        <!-- Müşteri Adı 
        <div class="mb-4">
            Html.LabelFor(x => x.MusteriAdi, new { class = "form-label" })
           Html.TextBoxFor(x => x.MusteriAdi, new { class = "form-control form-control-lg shadow-sm", placeholder = "Müşteri adı girin" })
        </div>
        -->

        <!-- Çalışan Seçimi -->
        <div class="mb-4">
            @Html.LabelFor(x => x.CalisanID, new { @class = "form-label" })
            @Html.DropDownListFor(x => x.CalisanID, new SelectList(ViewBag.Calisanlar, "CalisanID", "CalisanAdi"), "Çalışan Seçin", new { @class = "form-control form-control-lg shadow-sm" })
        </div>

        <!-- İşlem Seçimi 
        <div class="mb-4">
           Html.LabelFor(x => x.IslemID, new { class = "form-label" })
            Html.DropDownListFor(x => x.IslemID, new SelectList(ViewBag.Islemler, "IslemID", "IslemAdi"), "İşlem Seçin", new { class = "form-control form-control-lg shadow-sm" })
        </div>
        -->
        <!-- Randevu Tarihi -->
        <div class="mb-4">
            @Html.LabelFor(x => x.Tarih, new { @class = "form-label" })
            @Html.TextBoxFor(x => x.Tarih, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control form-control-lg shadow-sm", type = "datetime-local" })
        </div>

        <!-- Durum Seçimi -->
        <div class="mb-4">
            @Html.LabelFor(x => x.Durum, new { @class = "form-label" })
            @Html.DropDownListFor(x => x.Durum, new SelectList(new[] { "Onaylı", "Beklemede", "İptal Edildi" }), "Durum Seçin", new { @class = "form-control form-control-lg shadow-sm" })
        </div>

        <!-- Submit Butonu -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-custom btn-lg w-50">Değişikliği Kaydet</button>
        </div>
    </div>
}

<!-- CSS İyileştirmeleri -->
<style>
    /* Form Konteyneri */
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Başlık */
    h2 {
        font-size: 28px;
        color: #007bff;
        font-weight: bold;
    }

    /* Input Alanları */
    .form-control {
        border-radius: 8px;
        border: 1px solid #ddd;
        font-size: 16px;
    }

    .form-control-lg {
        height: 45px;
        padding: 10px;
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    /* Buton Stili */
    .btn-custom {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        font-weight: bold;
        border-radius: 25px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            transform: translateY(-5px);
        }

    /* Ekstra stil ile formda daha fazla rahatlık */
    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .text-center {
        margin-top: 20px;
    }

</style>
