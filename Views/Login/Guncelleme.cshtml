@model berber.Models.Kullanici
@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-action="Guncelle">
    <input type="hidden" asp-for="KullaniciID" />
    <div>
        <label asp-for="AdSoyad" class="control-label" >adsoyad</label>
        <input asp-for="AdSoyad" class="form-control"  /> 
        <span asp-validation-for="AdSoyad" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Sifre" class="control-label">sifre</label>
        <input asp-for="Sifre" class="form-control"  />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Telefon" class="control-label">telefon</label>
        <input asp-for="Telefon" class="form-control" />
        <span asp-validation-for="Telefon" class="text-danger"></span>
    </div>
    <button type="submit">Güncelle</button>
</form>


<!-- Bootstrap 5 CDN bağlantıları -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
