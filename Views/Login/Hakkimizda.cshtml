<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Navbar 13</title>

    <link rel="stylesheet" href="~/css/hakkimizda.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
</head>

@model List<berber.Models.Calisan>

<body>
    <nav>
       
        Çalışanlar
    </nav>
    <main>

        @foreach (var calisan in Model)
        {
            


            <article>
                <img src="~/images/11.png" />
                <div>
                    <name> @calisan.AdSoyad </name>
                    <p>
                        @if (calisan.CalisanIslemler != null && calisan.CalisanIslemler.Count > 0)
                        {
                            <ul>
                                @foreach (var calisanIslem in calisan.CalisanIslemler)
                                {
                                    <li>@calisanIslem.Islem.IslemAdi</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>Bu çalışanın hizmeti yok.</span>
                        }
                </div>
            </article>
        }


      
    </main>
</body>
</html>
